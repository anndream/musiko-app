<resources>

    <style name="Theme.Musiko" parent="Theme.Musiko.Base">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="Theme.Musiko.Light" parent="Theme.Musiko.Base.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
    </style>

    <style name="Theme.Musiko.Black" parent="Theme.Musiko.Base.Black">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
        <item name="android:windowBackground">@color/window_color_dark</item>
    </style>

    <style name="Theme.Musiko.FollowSystem" parent="Theme.Musiko.Base.Adaptive">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:textViewStyle">@style/TextViewStyleIm</item>
        <item name="android:windowBackground">@color/window_color</item>
    </style>

    <style name="Theme.Musiko.Notification" parent="@android:style/TextAppearance.Material.Notification" />

    <style name="Theme.Musiko.Notification.Title" parent="@android:style/TextAppearance.Material.Notification.Title" />

    <style name="MusicProgressSlider" parent="MusicProgressSliderParent">
        <item name="android:padding">0dp</item>
    </style>

</resources>
